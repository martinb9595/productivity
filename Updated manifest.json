{
  "manifest_version": 3,
  "name": "My React Extension",
  "version": "1.0",
  "description": "A productivity extension built with React.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "src/js/background.js"
  },
  "action": {
    "default_popup": "src/index.html" // Updated to point to the React app
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
