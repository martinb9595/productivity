{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "description": "Enhance productivity by blocking distracting websites and providing a focus timer.",
  "permissions": ["storage", "tabs", "webNavigation", "alarms"],
  "background": {
    "service_worker": "dist/js/background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"]
    }
  ],
  "options_page": "src/html/settings.html"
}
